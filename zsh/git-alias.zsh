alias groot='\cd $(git rev-parse --show-toplevel)' # cd to the root of a git repo

alias gtask="~/zsh/scripts/git-task.sh" # $1: name of the task branch
alias gtask-done="~/zsh/scripts/git-task-done.sh"

# From https://github.com/tj/git-extras
alias gbrowse="~/zsh/scripts/git-browse.sh"
alias geffort="~/zsh/scripts/git-effort.sh --above 5"
alias gsummary="~/zsh/scripts/git-summary.sh"
